<log4net>
  <appender name="LogFileAppender" type="log4net.Appender.FileAppender">
    <param name="File" value="D:\SatelliteProject\logs\log.txt" />
    <param name="AppendToFile" value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="[%-5level][%date][%method] %message %newline" />
    </layout>
  </appender>
  <root>
    <level value="Info" />
    <appender-ref ref="LogFileAppender" />
  </root>
</log4net>